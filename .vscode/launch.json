    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) hpta-app",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/hpta-app",
            "args": ["--gamedata_dir=${workspaceFolder}/gamedata"],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Automatische Strukturierung und Einr端ckung f端r \"gdb\" aktivieren",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Disassemblierungsvariante auf Intel festlegen",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) hpta-editor",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/hpta-editor",
            "args": [
                "--gamedata_dir=${workspaceFolder}/gamedata", 
                "--configfile=${workspaceFolder}/config/hpta-editor.conf",
                "--scale=2",
                "--loglevel=debug"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Automatische Strukturierung und Einr端ckung f端r \"gdb\" aktivieren",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Disassemblierungsvariante auf Intel festlegen",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}